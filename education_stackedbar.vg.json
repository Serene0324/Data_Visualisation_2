{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/Serene0324/Data_Visualisation_2/main/enrolment_school_district.csv"
  },
  "transform": [{ "filter": "datum.sex == 'both'" }],
  "layer": [
    {
      "params": [
        {
          "name": "state_select",
          "select": { "type": "point", "fields": ["state"] },
          "bind": {
            "input": "select",
            "options": [
              null,
              "Johor",
              "Kedah",
              "Kelantan",
              "Melaka",
              "Negeri Sembilan",
              "Pahang",
              "Perak",
              "Perlis",
              "Pulau Pinang",
              "Sabah",
              "Sarawak",
              "Selangor",
              "Terengganu",
              "Kuala Lumpur",
              "Labuan",
              "Putrajaya"
            ],
            "labels": [
              "All States",
              "Johor",
              "Kedah",
              "Kelantan",
              "Melaka",
              "Negeri Sembilan",
              "Pahang",
              "Perak",
              "Perlis",
              "Pulau Pinang",
              "Sabah",
              "Sarawak",
              "Selangor",
              "Terengganu",
              "Kuala Lumpur",
              "Labuan",
              "Putrajaya"
            ],
            "name": "Select State: "
          }
        },
        {
          "name": "stage_highlight",
          "select": { "type": "point", "fields": ["stage"] },
          "bind": "legend"
        }
      ],
      "transform": [
        { "filter": { "param": "state_select" } },
        { "filter": { "param": "stage_highlight" } }
      ],
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "state",
          "type": "nominal",
          "title": "State",
          "axis": { "labelAngle": -40 }
        },
        "y": {
          "field": "students",
          "type": "quantitative",
          "title": "Number of Students"
        },
        "color": {
          "field": "stage",
          "type": "nominal",
          "title": "Education Stage",
          "sort": ["primary", "secondary", "post-secondary"],
          "scale": {
            "domain": ["primary", "secondary", "post-secondary"],
            "range": ["#0077FF", "#FFF200", "#FF6100"]
          }
        },
        "opacity": {
          "condition": { "param": "stage_highlight", "value": 1 },
          "value": 0.3
        },
        "tooltip": [
          { "field": "state", "type": "nominal", "title": "State" },
          { "field": "stage", "type": "nominal", "title": "Education Stage" },
          {
            "field": "students",
            "type": "quantitative",
            "title": "Number of Students",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "black",
        "strokeWidth": 2,
        "strokeDash": [4, 4]
      },
      "encoding": {
        "y": {
          "aggregate": "mean",
          "field": "students",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "fontSize": 11,
        "fontWeight": "bold"
      },
      "encoding": {
        "y": {
          "aggregate": "mean",
          "field": "students",
          "type": "quantitative"
        },
        "text": { "value": "Average" }
      }
    }
  ],
  "config": {
    "axis": { "labelFontSize": 12, "titleFontSize": 14 },
    "legend": { "titleFontSize": 10, "labelFontSize": 9 }
  }
}
