{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Relationship Between Total Population and Student Enrolments by State (2022)",
    "fontSize": 18,
    "anchor": "start"
  },
  "width": 915,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/Serene0324/Data_Visualisation_2/main/population_enrolments.csv",
    "format": {
      "type": "csv",
      "parse": {
        "total_population_actual": "number",
        "total_students": "number",
        "total_population": "number"
      }
    }
  },
  "transform": [
    {
      "calculate": "datum.total_students / datum.total_population_actual",
      "as": "student_ratio"
    },
    {
      "calculate": "indexof(['Putrajaya', 'Labuan'], datum.state) > -1 ? 'Outlier' : 'Normal'",
      "as": "outlier_flag"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "circle",
        "opacity": 0.75,
        "stroke": "black",
        "strokeWidth": 1
      },
      "encoding": {
        "x": {
          "field": "total_population_actual",
          "type": "quantitative",
          "title": "Total Population (All Ages)",
          "axis": {"grid": true},
          "scale": {"type": "linear"}
        },
        "y": {
          "field": "total_students",
          "type": "quantitative",
          "title": "Total Student Enrolments",
          "axis": {"grid": true},
          "scale": {"type": "linear"}
        },
        "size": {
          "field": "student_ratio",
          "type": "quantitative",
          "title": "Student-to-Population Ratio",
          "scale": {"domain": [0, 0.5], "range": [50, 2000]}
        },
        "color": {
          "field": "outlier_flag",
          "type": "nominal",
          "title": "Category",
          "scale": {
            "domain": ["Normal", "Outlier"],
            "range": ["#8E8994", "#47CDD7"]
          }
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "total_population_actual", "type": "quantitative", "title": "Population", "format": ","},
          {"field": "total_students", "type": "quantitative", "title": "Students", "format": ","},
          {"field": "student_ratio", "type": "quantitative", "title": "Student Ratio", "format": ".2%"}
        ]
      }
    },
    {
      "transform": [{"filter": "datum.outlier_flag == 'Outlier'"}],
      "mark": {
        "type": "text",
        "align": "center",
        "dx": 10,  
        "dy": 60,
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "#333"
      },
      "encoding": {
        "x": {"field": "total_population_actual", "type": "quantitative"},
        "y": {"field": "total_students", "type": "quantitative"},
        "text": {"field": "state"}
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "legend": {"labelFontSize": 12, "titleFontSize": 13}
  }
}
