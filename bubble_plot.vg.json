{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/Serene0324/Data_Visualisation_2/main/data/population_enrolments.csv",
    "format": {
      "type": "csv",
      "parse": {
        "total_population_actual": "number",
        "total_students": "number",
        "total_population": "number"
      }
    }
  },
  "transform": [
    {
      "calculate": "datum.total_students / datum.total_population_actual",
      "as": "student_ratio"
    },
    {
      "calculate": "datum.state == 'Putrajaya' ? 'Putrajaya' : 'Other'",
      "as": "higher_student_ratio"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "x": {
          "field": "total_population_actual",
          "type": "quantitative",
          "title": "Total Population (All Ages)",
          "axis": {"grid": true}
        },
        "y": {
          "field": "total_students",
          "type": "quantitative",
          "title": "Total Student Enrolments",
          "axis": {"grid": true}
        },
        "size": {
          "field": "student_ratio",
          "type": "quantitative",
          "title": "Student Ratio",
          "scale": {"domain": [0, 0.3], "range": [10, 250]},
          "legend": {
            "title": "Student Ratio",
            "format": ".0%"
          }
        },
        "color": {
          "field": "higher_student_ratio",
          "type": "nominal",
          "scale": {
            "domain": ["Other", "Putrajaya"],
            "range": ["grey", "red"]
          },
          "legend": {"title": "States"}
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "total_population_actual", "type": "quantitative", "title": "Population", "format": ","},
          {"field": "total_students", "type": "quantitative", "title": "Students", "format": ","},
          {"field": "student_ratio", "type": "quantitative", "title": "Student Ratio", "format": ".2%"}
        ]
      }
    },
    {
      "transform": [{"filter": "datum.higher_student_ratio == 'Putrajaya'"}],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 10,
        "dy": 5,
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "#333"
      },
      "encoding": {
        "x": {"field": "total_population_actual", "type": "quantitative"},
        "y": {"field": "total_students", "type": "quantitative"},
        "text": {"field": "state"}
      }
    },
    {
      "transform": [{"filter": "datum.state == 'Putrajaya'"}],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 30,
        "dy": -20,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#333"
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "legend": {"labelFontSize": 10, "titleFontSize": 9}
  }
}
