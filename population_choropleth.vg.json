{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 380,
  "projection": {
    "type": "mercator",
    "center": [109.5, 4],
    "scale": 2000
  },
  "layer": [
    {
      "data": { "graticule": { "step": [3, 3] } },
      "mark": { "type": "geoshape", "stroke": "lightgray", "fill": "none" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Serene0324/Data_Visualisation_2/main/ne_10m_admin_0_countries.json",
        "format": { "type": "topojson", "feature": "ne_10m_admin_0_countries" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#E0E0E0",
        "stroke": "white",
        "strokeWidth": 0.4
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Serene0324/Data_Visualisation_2/main/ne_10m_admin_1_states_provinces.json",
        "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Serene0324/Data_Visualisation_2/main/data/population_enrolments.csv"
            },
            "key": "state",
            "fields": ["total_population_actual"]
          }
        },
        { "filter": "isValid(datum.total_population_actual)" },
        {
          "window": [{ "op": "sum", "field": "total_population_actual", "as": "total_population" }],
          "frame": [null, null]
        },
        { "calculate": "datum.total_population_actual / datum.total_population", "as": "population_normalized" }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.5 },
      "encoding": {
        "color": {
          "field": "population_normalized",
          "type": "quantitative",
          "scale": { "scheme": "oranges" },
          "title": "Share of Total Population (%)",
          "legend": { "format": ".0%" }  
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State" },
          { "field": "total_population_actual", "type": "quantitative", "title": "Population", "format": "," },
          {
            "field": "population_normalized",
            "type": "quantitative",
            "format": ".2%",
            "title": "Share of Total Population"
          }
        ]
      }
    }
  ],
  "config": {
    "view": { "stroke": "transparent" },
    "legend": { "titleFontSize": 10, "labelFontSize": 9 }
  }
}
