{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Population by State, Malaysia (2022)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "malaysia.geojson",
    "format": {"type": "json"}
    },
  "transform": [
    {
      "lookup": "properties.NAME_1",
      "from": {
        "data": {"url": "total_population_2022.csv"},
        "key": "state",
        "fields": ["population"]
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
  "encoding": {
    "color": {
      "field": "population",
      "type": "quantitative",
      "scale": {"scheme": "blues"}
    },
    "tooltip": [
      {"field": "properties.NAME_1", "type": "nominal", "title": "State"},
      {"field": "population", "type": "quantitative"}
    ]
  }
}
